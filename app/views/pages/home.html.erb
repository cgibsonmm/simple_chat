<div class="jumbotron">
  <h1 style="text-align:center">Chatter</h1>
  <div class="well" id="chatbox" style="height:250px; border: 1px solid #222222; overflow:scroll;">
    <% @messages.each do |message| %>
      <%= render 'messages/message', message: message %>
    <% end %>
  </div>
  <%= form_with model: @message do |f| %>
    <div class="input-group md-3">
      <%= f.text_field :body, placeholder: "Say something...", class: 'form-control', id: "message_form" %>
      <div class="input-group-append">
        <%= f.submit "Send", class: 'btn btn-secondary' %>
      </div>
    </div>
  <% end %>
</div>
